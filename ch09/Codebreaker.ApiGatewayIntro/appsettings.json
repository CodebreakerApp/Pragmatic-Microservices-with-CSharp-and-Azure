{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Clusters": {
      "botcluster": {
        "Destinations": {
          "botcluster/destination1": {
            "Address": "http://localhost:5141"
          }
        }
      },
      "gamesapicluster": {
        "Destinations": {
          "gamescluster/destination1": {
            "Address": "http://localhost:9400"
          }
        }
      }
    },
    "Routes": {
      "gamesRoute": {
        "ClusterId": "gamesapicluster",
        "Match": {
          "Path": "/games/{*any}"
        }
      },
      "botRoute": {
        "ClusterId": "botcluster",
        "AuthorizationPolicy": "group1",
        "Match": {
          "Path": "/bot/{*any}"
        }
      }
    }
  }
}
